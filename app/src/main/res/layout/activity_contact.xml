<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/blue_separator_top_bottom_margin"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/blue_separator_top_bottom_margin"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unit_name"
                    android:textStyle="bold"
                    android:textSize="@dimen/contact_font_size"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/postal_code_and_city"
                    android:textSize="@dimen/contact_font_size"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/street_and_number"
                    android:textSize="@dimen/contact_font_size"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/blue_separator_height"
            android:layout_marginTop="@dimen/blue_separator_top_bottom_margin"
            android:layout_marginBottom="@dimen/blue_separator_top_bottom_margin"
            android:background="@color/about_separator"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:id="@+id/email_button"
                android:padding="@dimen/contact_element_padding"
                android:layout_marginTop="@dimen/contact_element_margin_top_bottom"
                android:layout_marginBottom="@dimen/contact_element_margin_top_bottom"
                android:background="@drawable/contact_element_background">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_email"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/contact_font_size"
                        android:id="@+id/email_text_view"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:id="@+id/call_1_button"
                android:padding="@dimen/contact_element_padding"
                android:layout_marginTop="@dimen/contact_element_margin_top_bottom"
                android:layout_marginBottom="@dimen/contact_element_margin_top_bottom"
                android:background="@drawable/contact_element_background">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_call"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/contact_font_size"
                        android:id="@+id/call_1_text_view"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="100"
                android:id="@+id/call_2_button"
                android:padding="@dimen/contact_element_padding"
                android:layout_marginTop="@dimen/contact_element_margin_top_bottom"
                android:layout_marginBottom="@dimen/contact_element_margin_top_bottom"
                android:background="@drawable/contact_element_background">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_call"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/contact_font_size"
                        android:id="@+id/call_2_text_view"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:id="@+id/fax_button"
                android:padding="@dimen/contact_element_padding"
                android:background="@drawable/contact_element_background"
                android:layout_marginTop="@dimen/contact_element_margin_top_bottom"
                android:layout_marginBottom="@dimen/contact_element_margin_top_bottom">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_fax"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/contact_font_size"
                        android:id="@+id/fax_text_view"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:id="@+id/map_button"
            android:padding="@dimen/contact_element_padding"
            android:background="@drawable/contact_element_background"
            android:layout_marginTop="@dimen/contact_element_margin_top_bottom"
            android:layout_marginBottom="@dimen/contact_element_margin_top_bottom">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_action_map"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/contact_font_size"
                    android:id="@+id/map_text_view"/>
            </RelativeLayout>
        </LinearLayout>
